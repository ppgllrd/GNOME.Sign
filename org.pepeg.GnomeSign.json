{
  "app-id": "org.pepeg.GnomeSign",
  "runtime": "org.gnome.Platform",
  "runtime-version": "48",
  "sdk": "org.gnome.Sdk",
  "command": "gnomesign",
  "finish-args": [
    "--share=ipc",
    "--socket=wayland",
    "--socket=fallback-x11",
    "--device=dri",
    "--filesystem=xdg-run/dconf",
    "--talk-name=ca.desrt.dconf",
    "--share=network"
  ],
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.rust-stable"
  ],
  "modules": [
    "python-modules.json",
    {
      "name": "gnomesign",
      "buildsystem": "meson",
      "config-opts": [
        "-Dbuildtype=release"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}
